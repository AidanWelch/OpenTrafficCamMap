{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:mocha/recommended"
	],
	"env": {
		"node": true,
		"es2020": true,
		"mocha": true
	},
	"plugins": [
		"mocha"
	],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-console": "warn",
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"strict": "error",
		"eqeqeq": ["error", "always"]
	}
}